{% extends 'auth/index.html.twig' %}

{% block title %}Create Account{% endblock %}

{% block body %}
<div class="auth-header">
    <h1>Dobby Agents</h1>
    <h2>Create Account</h2>
    <p>Join us and start creating amazing AI agents</p>
</div>

<form id="registerForm" class="auth-form" action="{{ url('app_auth_register') }}" v-on:submit.prevent="handleRegister">
    <div class="form-group">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" data-type="string" required>
    </div>

    <div class="form-group">
        <label for="email">Email Address</label>
        <input type="email" id="email" name="email" data-type="string" required>
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" data-type="string" required>
        <small class="form-hint"></small>
    </div>

    <div class="form-group">
        <label for="confirmPassword">Confirm Password</label>
        <input type="password" id="confirmPassword" name="password_confirmation" data-type="string" required>
    </div>

    <div class="form-group">
        <label class="checkbox-label">
            <input type="checkbox" name="agree" data-type="bool" value="1" required>
            I agree to the <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>
        </label>
    </div>

    <button type="submit" class="btn btn-primary btn-full">Create Account</button>
</form>

<div class="auth-footer">
    <p>Already have an account? <a href="{{ url('app_auth_login') }}">Sign in here</a></p>
</div>
{% endblock %}