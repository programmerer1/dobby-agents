{% extends 'auth/index.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block body %}
<div class="auth-header">
    <h1>Dobby Agents</h1>
    <h2>Reset Password</h2>
</div>

<form id="registerForm" class="auth-form" action="{{ url('app_auth_reset_password') }}"
    v-on:submit.prevent="handleResetPassword">
    <input type="hidden" name="email" value="{{ email }}" data-type="string">
    <input type="hidden" name="token" value="{{ token }}" data-type="string">
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" data-type="string" minlength="3" maxlength="50" required>
        <small class="form-hint"></small>
    </div>

    <div class="form-group">
        <label for="confirmPassword">Confirm Password</label>
        <input type="password" id="confirmPassword" name="password_confirmation" data-type="string" minlength="3"
            maxlength="50" required>
    </div>
    <button type="submit" class="btn btn-primary btn-full">Change password</button>
</form>

<div class="auth-footer">
    <p>Already have an account? <a href="{{ url('app_auth_login') }}">Sign in here</a></p>
</div>
{% endblock %}