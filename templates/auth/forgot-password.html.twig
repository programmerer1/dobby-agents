{% extends 'auth/index.html.twig' %}

{% block title %}Forgot Your Password?{% endblock %}

{% block body %}
<div class="auth-header">
    <h1>Dobby Agents</h1>
    <h2>Forgot Your Password?</h2>
    <p>Enter your email address and we will send you instructions to reset your password.</p>
</div>

<form id="registerForm" class="auth-form" action="{{ url('app_auth_reset_password_token_create') }}"
    v-on:submit.prevent="handleCreateResetPasswordToken">
    <div class="form-group">
        <label for="email">Email Address</label>
        <input type="email" id="email" name="email" data-type="string" maxlength="120" required>
    </div>
    <button type="submit" class="btn btn-primary btn-full">Send Request</button>
</form>

<div class="auth-footer">
    <p>Remembered your password? <a href="{{ url('app_auth_login') }}">Sign in here</a></p>
    <p>Don't have an account? <a href="{{ url('app_auth_register') }}">Sign up here</a></p>
</div>
{% endblock %}