    <div class="agents-grid" id="agentsPage" data-agents-url="{{ url('app_dashboard_my_agents_load') }}"
        data-agent-chat-url="{{ path('app_dashboard_agent_chat', {'slug': '__SLUG__'}) }}"
        data-agent-edit-url="{{ path('app_dashboard_edit_agent', {'id': '__ID__'}) }}">
        <div class="agent-card" v-for="agent in agents" :key="agent.id" data-type="public">
            <div class="agent-header">
                <h3>[[ agent.name ]]</h3>
                <span class="agent-status" :class="agent.isPublic ? 'public' : 'private'">
                    [[ agent.isPublic ? 'Public' : 'Private' ]]
                </span>
            </div>
            <p class="agent-description">[[ agent.descr ]]</p>
            <!--<div class="agent-stats">
