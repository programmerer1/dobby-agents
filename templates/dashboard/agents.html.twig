{% block title %}My Agents{% endblock %}

{% block body %}
<div class="container" id="allAgents">
    <div class="page-header">
        <div>
            <h1 id="pageTitle">My Agents</h1>
            <p id="pageDescription">Manage and organize your AI agents</p>
        </div>
        <a class="btn btn-primary" href="{{ url('app_dashboard_create_agent') }}">
            <span class="btn-icon">+</span>
            Create Agent
        </a>
    </div>

